<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:padding="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/leftArrow"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_toRightOf="@id/leftArrow"
                android:text="Create an event"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/closeButton"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_white_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
            android:text="Name of event"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:layout_width="match_parent"
            android:text="Aditya Birthday"
            android:hint="Name of event"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


    <TextView
            android:text="Event Occasion "
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:layout_width="match_parent"
            android:text="Aditya Birthday"
            android:hint="Name of event"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>


    <TextView
            android:text="Write something on event"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:layout_width="match_parent"
            android:hint="Write event description"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/eventDateLabel"
                    android:text="Event date"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/eventDate"
                    android:layout_below="@id/eventDateLabel"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:hint="Select Date"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_toRightOf="@id/eventDate"
                    android:layout_below="@id/eventDateLabel"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_date_calendar_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/responseDateLabel"
                    android:text="Response By"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/responseDate"
                    android:layout_below="@id/responseDateLabel"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/responseDate"
                    android:hint="Select Date"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_toRightOf="@id/responseDate"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/responseDateLabel"
                    android:src="@drawable/ic_date_calendar_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/inviteFriendsLaout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView

                android:layout_width="wrap_content"
                android:text="Invite Friends"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>